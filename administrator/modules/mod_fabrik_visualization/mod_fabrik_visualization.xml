<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.7.0"
	client="administrator"
	method="upgrade">
	<name>Fabrik visualization</name>
	<author>Rob Clayburn</author>
	<creationDate>Aug 2011</creationDate>
	<copyright>(C) 2006 Pollen 8 Design Ltd. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>3.0 Alpha</version>
	<description>This module shows a Fabrik visualization in Joomlas adminstration pages.</description>
	<files>
		<filename module="mod_fabrik_visualizaton">mod_fabrik_visualizaton.php</filename>
		<filename>index.html</filename>
		<filename>mod_fabrik_visualizaton.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="advanced" addfieldpath="/administrator/components/com_fabrik/models/fields">
				<field name="id" type="visaulizationlist" default="0" label="Select Instance" description="" />
			</fieldset>
		</fields>
	</config>
</extension>
