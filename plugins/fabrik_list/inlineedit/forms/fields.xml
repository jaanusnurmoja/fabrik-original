			<field cols="40" description="PLG_LIST_INLINE_EDITABLE_ELEMENTS_DESC" label="PLG_LIST_INLINE_EDITABLE_ELEMENTS_LABEL" name="inline_editable_elements" repeat="true" rows="6" type="textarea"/>
			
			<field default="dblclick" description="PLG_LIST_INLINE_EDIT_EVENT_DESC" label="PLG_LIST_INLINE_EDIT_EVENT_LABEL" name="inline_edit_event" repeat="true" type="list">
