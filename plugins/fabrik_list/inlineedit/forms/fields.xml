					<option value="1">JYES</option>	
			</field>
			
			<field default="1" description="PLG_LIST_INLINE_SHOW_CANCEL_DESC" label="PLG_LIST_INLINE_SHOW_CANCEL_LABEL" name="inline_show_cancel" repeat="true" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
			<field default="1" description="PLG_LIST_INLINE_SHOW_SAVE_DESC" label="PLG_LIST_INLINE_SHOW_SAVE_LABEL" name="inline_show_save" repeat="true" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
		
		</fieldset>
	</fields>
</form>
