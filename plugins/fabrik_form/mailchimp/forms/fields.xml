<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields name="params">
		<fieldset name="plg-form-mailchimp">
			<field description="PLG_FORM_MAILCHIMP_API_KEY_DESC" label="PLG_FORM_MAILCHIMP_API_KEY_LABEL" name="mailchimp_apikey" repeat="true" size="40" type="text"/>
			
		<field description="PLG_FORM_MAILCHIMP_LIST_ID_DESC" label="PLG_FORM_MAILCHIMP_LIST_ID_LABEL" name="mailchimp_listid" repeat="true" size="30" type="text"/>
			
		<field description="PLG_FORM_MAILCHIMP_EMAIL_DESC" label="PLG_FORM_MAILCHIMP_EMAIL_LABEL" name="mailchimp_email" repeat="true" type="listfields"/>
			
		<field description="PLG_FORM_MAILCHIMP_FIRST_NAME_DESC" label="PLG_FORM_MAILCHIMP_FIRST_NAME_LABEL" name="mailchimp_firstname" repeat="true" type="listfields"/>
			
		<field description="PLG_FORM_MAILCHIMP_LAST_NAME_DESC" label="PLG_FORM_MAILCHIMP_LAST_NAME_LABEL" name="mailchimp_lastname" repeat="true" type="listfields"/>
			
		<field default="Sign up to my mailing list" description="PLG_FORM_MAILCHIMP_SIGNUP_LABEL_DESC" label="PLG_FORM_MAILCHIMP_SIGNUP_LABEL_LABEL" name="mailchimp_signuplabel" repeat="true" size="30" type="text"/>
		
