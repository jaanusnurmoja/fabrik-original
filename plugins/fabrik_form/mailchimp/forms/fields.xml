				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field default="html" description="PLG_FORM_MAILCHIMP_EMAIL_TYPE_DESC" label="PLG_FORM_MAILCHIMP_EMAIL_TYPE_LABEL" name="mailchimp_email_type" repeat="true" type="radio">
				<option value="text">text</option>
				<option value="html">html</option>
			</field>
			
			
			<field default="1" description="PLG_FORM_MAILCHIMP_DOUBLE_OPTIN_DESC" label="PLG_FORM_MAILCHIMP_DOUBLE_OPTIN_LABEL" name="mailchimp_double_optin" repeat="true" type="radio">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field cols="40" description="PLG_FORM_MAILCHIMP_GROUP_OPTS_DESC" label="PLG_FORM_MAILCHIMP_GROUP_OPTS_LABEL" name="mailchimp_groupopts" repeat="true" rows="6" type="textarea"/>
				
		</fieldset>
	</fields>
