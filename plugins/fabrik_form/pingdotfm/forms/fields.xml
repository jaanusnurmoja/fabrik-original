<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields name="params">
		<fieldset name="plg-form-pingdotfm">
			<field description="PLG_FORM_PING_FM_USER_APIKEY_DESC" label="PLG_FORM_PING_FM_USER_APIKEY_LABEL" name="ping_userapikey" repeat="true" size="30" type="text"/>
					
			<field description="PLG_FORM_PING_FM_TITLEFIELD_DESC" label="PLG_FORM_PING_FM_TITLEFIELD_LABEL" name="ping_title_field" onlytablefields="0" repeat="true" type="listfields"/>
				
			<field cols="30" description="PLG_FORM_PING_FM_TITLETMPL_DESC" label="PLG_FORM_PING_FM_TITLETMPL_LABEL" name="ping_title_tmpl" repeat="true" rows="6" type="textarea"/>
			
			<field description="PLG_FORM_PING_FM_MSGFIELD_DESC" label="PLG_FORM_PING_FM_MSGFIELD_LABEL" name="ping_msg_field" onlytablefields="0" repeat="true" type="listfields"/>
			
			<field cols="30" description="PLG_FORM_PING_FM_MSGTMPL_DESC" label="PLG_FORM_PING_FM_MSGTMPL_LABEL" name="ping_msg_tmpl" repeat="true" rows="6" type="textarea"/>
			
			<field default="status" description="PLG_FORM_PING_FM_METHOD_DESC" label="PLG_FORM_PING_FM_METHOD_LABEL" name="ping_method" repeat="true" type="list">
				<option value="status">Status</option>
				<option value="microblog">Micro-blog</option>
				<option value="blog">Blog</option>
			</field>
			
			<field description="PLG_FORM_PING_FM_METHODFIELD_DESC" label="PLG_FORM_PING_FM_METHODFIELD_LABEL" name="ping_method_field" onlytablefields="0" repeat="true" type="listfields"/>
			
			<field default="0" description="PLG_FORM_PING_FM_SHOW_SUCCESSMSG_DESC" label="PLG_FORM_PING_FM_SHOW_SUCCESSMSG_LABEL" name="ping_show_success_msg" repeat="true" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field cols="30" description="PLG_FORM_PING_FM_CONDITION_DESC" label="PLG_FORM_PING_FM_CONDITION_LABEL" name="ping_condition" repeat="true" rows="6" type="textarea"/>
			
		</fieldset>
	</fields>
</form>
