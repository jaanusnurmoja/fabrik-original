<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields>
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" name="plg-element-link">
			<field default="20" label="PLG_ELEMENT_LINK_WIDTH_LABEL" name="width" size="3" type="text"/>
				
			<field cols="45" label="PLG_ELEMENT_LINK_DEFAULT_LABEL_LABEL" name="default" rows="6" type="textarea"/>
		
		</fieldset>
	</fields>
	
	<fields name="params">
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" name="plg-element-link-extra">
			<field default="http://" label="PLG_ELEMENT_LINK_DEFAULT_URL_LABEL" name="link_default_url" type="text"/>
				
			<field default="0" description="PLG_ELEMENT_LINK_TARGET_DESC" label="PLG_ELEMENT_LINK_TARGET_LABEL" name="link_target" type="list">
					<option value="_self">PLG_ELEMENT_LINK_SELF</option>
					<option value="_blank">PLG_ELEMENT_LINK_BLANK</option>
					<option value="_parent">PLG_ELEMENT_LINK_PARENT</option>
					<option value="_top">PLG_ELEMENT_LINK_TOP</option>
					<option value="mediabox">PLG_ELEMENT_LINK_MEDIABOX</option>
			</field>
			
			<field default="0" description="PLG_ELEMENT_LINK_SMART_LINK_DESC" label="PLG_ELEMENT_LINK_SMART_LINK_LABEL" name="link_smart_link" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="255" label="PLG_ELEMENT_LINK_MAX_LENGTH" name="maxlength" size="3" type="maxlength"/>
		</fieldset>
		
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" name="plg-element-link-bitly">
			<field default="0" description="PLG_ELEMENT_LINK_USE_BITLY_DESC" label="PLG_ELEMENT_LINK_USE_BITLY_LABEL" name="use_bitly" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field description="PLG_ELEMENT_LINK_BITLY_LOGIN_DESC" label="PLG_ELEMENT_LINK_BITLY_LOGIN_LABEL" name="bitly_login" size="30" type="text"/>
				
			<field description="PLG_ELEMENT_LINK_BITLY_API_KEY_DESC" label="PLG_ELEMENT_LINK_BITLY_API_KEY_LABEL" name="bitly_apikey" size="40" type="text"/>
		</fieldset>
	</fields>
</form>
