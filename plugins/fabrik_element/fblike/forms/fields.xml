<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset label="field" name="plg-element-fblike">
		
			<field description="PLG_ELEMENT_FBLIKE_APPLICATION_ID_DESC" label="PLG_ELEMENT_FBLIKE_APPLICATION_ID_LABEL" name="opengraph_applicationid" type="text"/>
				
			<field description="PLG_ELEMENT_FBLIKE_URL_DESC" label="PLG_ELEMENT_FBLIKE_URL_LABEL" name="fblike_url" type="text"/>
				
			<field default="standard" description="PLG_ELEMENT_FBLIKE_LAYOUT_DESC" label="PLG_ELEMENT_FBLIKE_LAYOUT_LABEL" name="fblike_layout" type="list">
					<option value="standard">standard</option>
					<option value="button_count">button_count</option>
			</field>
			
			<field default="false" label="PLG_ELEMENT_FBLIKE_SHOW_FACES_LABEL" name="fblike_showfaces" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="300" label="PLG_ELEMENT_FBLIKE_WIDTH_LABEL" name="fblike_width" size="3" type="text"/>
				
			<field default="like" label="PLG_ELEMENT_FBLIKE_ACTION_LABEL" name="fblike action" type="list">
					<option value="like">like</option>
					<option value="recommend">recommend</option>
			</field>

			<field default="arial" label="PLG_ELEMENT_FBLIKE_FONT_LABEL" name="fblike_font" type="list">
					<option value="arial">arial</option>
					<option value="lucida grande">lucida grande</option>
					<option value="segoe ui">segoe ui</option>
					<option value="tahoma">tahoma</option>
					<option value="trebuchet ms">trebuchet ms</option>
					<option value="verdana">verdana</option>
			</field>
			
			<field default="light" label="PLG_ELEMENT_FBLIKE_COLOR_SCHEME_LABEL" name="fblike_colorscheme" type="list">
					<option value="light">light</option>
					<option value="dark">dark</option>
			</field>
					
		</fieldset>

	</fields>
</form>
