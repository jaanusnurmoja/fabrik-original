<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields>
	
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" name="plg-element-textarea">
			<field default="40" label="PLG_ELEMENT_TEXTAREA_WIDTH_LABEL" name="width" size="3" type="text"/>
				
			<field default="6" label="PLG_ELEMENT_TEXTAREA_HEIGHT_LABEL" name="height" size="3" type="text"/>
				
			<field default="0" label="PLG_ELEMENT_TEXTAREA_EVAL_LABEL" name="eval" type="radio">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
				
			<field cols="45" label="PLG_ELEMENT_TEXTAREA_DEFAULT_LABEL" name="default" rows="6" type="textarea"/>
		</fieldset>
		
	</fields>
	<fields name="params">
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" name="plg-textarea-extra">
			
			<field description="PLG_ELEMENT_TEXTAREA_PLACEHOLDER_DESC" label="PLG_ELEMENT_TEXTAREA_PLACEHOLDER_LABEL" name="textarea_placeholder" size="60" type="text"/>
				
			<field default="0" description="PLG_ELEMENT_TEXTAREA_USE_WYSIWYG_EDITOR_DESC" label="PLG_ELEMENT_TEXTAREA_USE_WYSIWYG_EDITOR_LABEL" name="use_wysiwyg" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="0" description="PLG_ELEMENT_TEXTAREA_SHOW_MAX_LIMIT_DESC" label="PLG_ELEMENT_TEXTAREA_SHOW_MAX_LIMIT_LABEL" name="textarea-showmax" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="255" description="PLG_ELEMENT_TEXTAREA_MAXLENGTH_DESC" label="PLG_ELEMENT_TEXTAREA_MAXLENGTH_LABEL" name="textarea-maxlength" size="5" type="text"/>
			
			<field default="0" description="PLG_ELEMENT_TEXTAREA_TAGIFY_DESC" label="PLG_ELEMENT_TEXTAREA_TAGIFY_LABEL" name="textarea-tagify" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field description="PLG_ELEMENT_TEXTAREA_TAGIFY_URL_DESC" label="PLG_ELEMENT_TEXTAREA_TAGIFY_URL_LABEL" name="textarea_tagifyurl" size="60" type="text"/>
			
			<field default="0" description="PLG_ELEMENT_TEXTAREA_TRUNCATE_DESC" label="PLG_ELEMENT_TEXTAREA_TRUNCATE_LABEL" name="textarea-truncate" size="3" type="text"/>
				
			<field default="1" description="PLG_ELEMENT_TEXTAREA_SHOW_HOVER_DESC" label="PLG_ELEMENT_TEXTAREA_SHOW_HOVER_LABEL" name="textarea-hover" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
			<field default="top" description="PLG_ELEMENT_TEXTAREA_HOVER_LOCATION_DESC" label="PLG_ELEMENT_TEXTAREA_HOVER_LOCATION_LABEL" name="textarea_hover_location" type="list">
					<option value="top">top</option>
					<option value="right">right</option>
					<option value="bottom">bottom</option>
					<option value="left">left</option>
			</field>
			
		</fieldset>
	</fields>
</form>
